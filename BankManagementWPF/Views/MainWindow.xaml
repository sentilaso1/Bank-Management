<Window x:Class="BankManagementSystem.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Management" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="150" Background="SteelBlue">
                <Button x:Name="btnHome" Content="Home" Click="btnHome_Click" Margin="5"/>
            <Button x:Name="btnClients" Content="Clients" Click="btnClients_Click" Margin="5"/>
            <Button x:Name="btnUsers" Content="Users" Click="btnUsers_Click" Margin="5"/>
            <Button x:Name="btnTransactions" Content="Transactions" Click="btnTransactions_Click" Margin="5"/>
            <Button x:Name="btnLoginRegisters" Content="LoginRegisters" Click="btnLoginRegisters_Click" Margin="5"/>
                <Button x:Name="btnRevenue" Content="System Revenue" Click="btnRevenue_Click" Margin="5"/>
            <Button x:Name="btnLogout" Content="Logout" Click="btnLogout_Click" Margin="5"/>
        </StackPanel>
            <ContentControl x:Name="MainContent"/>
        </DockPanel>
    </ScrollViewer>
</Window>
