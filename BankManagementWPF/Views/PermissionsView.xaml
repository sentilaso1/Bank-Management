                            <ListBoxItem Content="ðŸ’° Cashier" Tag="Cashier"/>
                            <ListBoxItem Content="ðŸ‘ï¸ Viewer" Tag="Viewer"/>
                        </ListBox>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="Permissions for Selected Role">
                        <ScrollViewer>
                            <StackPanel x:Name="RolePermissionsPanel" Margin="10"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="ðŸ‘¤ User Permissions">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Select User" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Username:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="UsersComboBox" Width="200" SelectionChanged="User_SelectionChanged"/>
                            <Button Content="ðŸ”„ Refresh Users" Width="120" Height="25" Margin="20,0,0,0" Click="RefreshUsers_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Column="0" Header="Current Permissions" Margin="0,0,10,0">
                            <ScrollViewer>
                                <StackPanel x:Name="CurrentUserPermissionsPanel" Margin="10"/>
                            </ScrollViewer>
                        </GroupBox>
                        <GroupBox Grid.Column="1" Header="Available Permissions" Margin="10,0,0,0">
                            <ScrollViewer>
                                <StackPanel x:Name="AvailablePermissionsPanel" Margin="10"/>
                            </ScrollViewer>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="ðŸ“Š Permission Audit">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Audit Filters" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Date Range:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker x:Name="AuditFromDatePicker" Width="120"/>
                            <TextBlock Text="to" VerticalAlignment="Center" Margin="5,0"/>
                            <DatePicker x:Name="AuditToDatePicker" Width="120"/>
                            <Button Content="ðŸ“Š Load Audit" Width="100" Height="25" Margin="20,0,0,0" Click="LoadAudit_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <DataGrid Grid.Row="1" x:Name="PermissionAuditDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ðŸ“… Date/Time" Binding="{Binding DateTime}" Width="130"/>
                            <DataGridTextColumn Header="ðŸ‘¤ User" Binding="{Binding Username}" Width="120"/>
                            <DataGridTextColumn Header="ðŸŽ­ Action" Binding="{Binding Action}" Width="150"/>
                            <DataGridTextColumn Header="ðŸ” Permission" Binding="{Binding Permission}" Width="200"/>
                            <DataGridTextColumn Header="ðŸ‘¨â€ðŸ’¼ Modified By" Binding="{Binding ModifiedBy}" Width="120"/>
