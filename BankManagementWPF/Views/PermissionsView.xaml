            <TextBlock Text="Manage user roles and system permissions" FontSize="14" Foreground="Gray"/>
            <Border Background="#ECEFF1" Padding="10" Margin="0,10,0,0" CornerRadius="5">
                <TextBlock Text="âš ï¸ Permission changes affect user access immediately. Use with caution." 
                           FontWeight="Bold" Foreground="#455A64"/>
            </Border>
        </StackPanel>

        <TabControl Grid.Row="2">
            <TabItem Header="ðŸŽ­ Role Permissions">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="System Roles" Margin="0,0,10,0">
                        <ListBox x:Name="RolesListBox" SelectionChanged="Role_SelectionChanged">
                            <ListBoxItem Content="ðŸ‘‘ Administrator" Tag="Administrator"/>
