<Window x:Class="BankManagementSystem.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="459" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Register New User" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="First Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtFirstName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtLastName" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtPhone" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtUsername" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Pin Code:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <PasswordBox x:Name="txtPinCode" Grid.Row="7" Grid.Column="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,76" Grid.Column="1">
            <Button x:Name="btnRegister" Content="Register" Width="100" Margin="0,0,10,0" Click="btnRegister_Click" Height="47"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Click="btnCancel_Click" Height="47"/>
        </StackPanel>
    </Grid>
</Window>